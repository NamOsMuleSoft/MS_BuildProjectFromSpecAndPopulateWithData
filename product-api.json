{
  "openapi": "3.0.0",
  "info": {
    "title": "Product API",
    "version": "1.0.0",
    "description": "API to manage Products with operations to list all products and create multiple products from an array."
  },
  "paths": {
    "/products": {
      "get": {
        "summary": "List products",
        "operationId": "listProducts",
        "responses": {
          "200": {
            "description": "A list of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Product" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create products",
        "operationId": "createProducts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/Product" }
              },
              "examples": {
                "sample": {
                  "value": [
                    { "id": "p-001", "name": "Widget", "description": "A basic widget" },
                    { "id": "p-002", "name": "Gadget", "description": "A fancy gadget" }
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Products created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Product" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "description": "Unique product identifier" },
          "name": { "type": "string", "description": "Product name" },
          "description": { "type": "string", "description": "Product description" }
        },
        "required": ["id", "name"],
        "additionalProperties": false,
        "example": { "id": "p-123", "name": "Example Product", "description": "An example product description" }
      }
    }
  }
}
